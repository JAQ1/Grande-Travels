@model UpdateProfileViewModel

<div class="page-banner profile-banner"></div>
<h1 class="page-title">Update Profile</h1>
<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <img src="~/@Model.DisplayPhotoPath" alt="Cant display image1" class="img-thumbnail img-responsive user-img" />
            <hr />
        </div>
        <div class="col-lg-9">
            <ul class="nav nav-tabs profile-options">
                <li><a asp-controller="Profile" asp-action="Index">Overview</a></li>
                <li><a asp-controller="Profile" asp-action="MyBookings">My Bookings</a></li>
                <li class="active"><a href="#">Update Profile</a></li>
            </ul>
            <br />
            <div class="profile-options">
                <form asp-action="UpdateProfile" asp-controller="Profile" method="post" enctype="multipart/form-data">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                    <div class="form-group">
                        <h2><strong>Display Name:</strong></h2>
                        <input class="form-control" type="text" asp-for="DisplayName" value="@Model.DisplayName" />
                        <span asp-validation-for="DisplayName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <h2><strong>Firstname:</strong></h2>
                        <input class="form-control" type="text" asp-for="FirstName" value="@Model.FirstName" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>

                    </div>

                    <div class="form-group">
                        <h2><strong>Lastname:</strong></h2>
                        <input class="form-control" type="text" asp-for="LastName" value="@Model.LastName" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <h2><strong>Email:</strong></h2>
                        <input class="form-control" type="text" asp-for="Email" value="@Model.Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <h2><strong>Phone:</strong></h2>
                        <input class="form-control" type="text" asp-for="Phone" value="@Model.Phone" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <h2><strong>Display Photo:</strong></h2>
                        <input class="form-control" type="file" name="DisplayPhotoPath" />
                        <span asp-validation-for="DisplayPhotoPath" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-info">Update</button>
                </form>
            </div>
            <br />
        </div>
    </div>
</div>
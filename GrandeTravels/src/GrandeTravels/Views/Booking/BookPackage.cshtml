@model BookPackageViewModel

<h1>Make a Booking</h1>

<h3>@Model.Package.Name</h3>
<h4>$@Model.Package.Price</h4>

<form asp-action="BookPackage" asp-controller="Booking" asp-route-id="@Model.Package.ID" method="post">
    <div class="form-group">
        <label asp-for="Payments"></label>
        <input asp-for="Payments" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ArrivalDate"></label>
        <input asp-for="ArrivalDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DepartureDate"></label>
        <input asp-for="DepartureDate" type="date" class="form-control" />
    </div>



    <button type="submit">Book Now</button>
</form>




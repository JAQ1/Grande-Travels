        </div>
    </div>

    <div class="navToggleBtn" onclick="toggleNav()">
        <div class="hamburger"></div>
    </div>
    <div class="userBtn dropdown">
        <a href="#" class="glyphicon glyphicon-user dropdown-toggle" data-toggle="dropdown"></a>
        <ul class="dropdown-menu">
            @if (User.Identity.IsAuthenticated)
            {
                <li class="dropdown-header"><a href="#">Logged in as <strong>@User.Identity.Name</strong></a></li>
